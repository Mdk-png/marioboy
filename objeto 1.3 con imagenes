package locro;

import java.awt.Color;
import java.awt.Graphics2D;

    public class Objeto {
        private int x;
        private int y;
        private int ancho;
        private int alto;
        private Color color;

        public Objeto(int x, int y, int ancho, int alto, Color color) {
            this.x = x;
            this.y = y;
            this.ancho = ancho;
            this.alto = alto;
            this.color = color;
        }

        public int getX() {
            return x;
        }

        public int getY() {
            return y;
        }

        public int getAncho() {
            return ancho;
        }

        public int getAlto() {
            return alto;
        }

        public void dibujar(Graphics2D g2d) {
            g2d.setColor(color);
            g2d.fillRect(x, y, ancho, alto);
        }

        public boolean colisiona(int x, int y, int ancho, int alto) {
            // Verifica si hay una superposici√≥n entre el jugador y el objeto
            return x < this.x + this.ancho &&
                   x + ancho > this.x &&
                   y < this.y + this.alto &&
                   y + alto > this.y;
        }
    }
